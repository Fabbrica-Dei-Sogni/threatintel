{
    "name": "threat-intelligence-logger",
    "version": "1.0.0",
    "description": "Sistema di logging per threat intelligence domestica",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon --inspect server.js",
        "setup": "npm install && npm run setup-nginx",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --ci --coverage --maxWorkers=2",
        "test-ratelimit": "node test/rateLimitTest.js",
        "redis-status": "redis-cli ping",
        "clear-redis": "redis-cli flushdb"
    },
    "dependencies": {
        "axios": "^1.11.0",
        "cors": "^2.8.5",
        "dotenv": "^17.2.1",
        "express": "^4.18.2",
        "express-rate-limit": "^8.0.1",
        "express-slow-down": "^3.0.0",
        "geoip-lite": "^1.4.7",
        "helmet": "^7.2.0",
        "ioredis": "^5.7.0",
        "ip-range-check": "^0.2.0",
        "ipinfo": "^1.5.2",
        "mongoose": "^7.5.0",
        "path": "^0.12.7",
        "rate-limit-redis": "^4.2.2",
        "whois": "^2.15.0",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "nodemon": "^3.0.1",
        "jest": "^29.7.0",
        "@types/jest": "^29.5.11",
        "mongodb-memory-server": "^9.1.4",
        "ioredis-mock": "^8.9.0",
        "supertest": "^6.3.3"
    }
}