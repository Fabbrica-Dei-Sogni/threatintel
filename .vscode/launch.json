    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Threatlog Backend",
            "port": 9229,
            "restart": true
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Threatlog Frontend (Chrome)",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend/dashboard/src",
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/*"
            }
        }
    ]
}